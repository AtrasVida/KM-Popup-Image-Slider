<?xml version="1.0" encoding="utf-8"?>
<com.kodmap.app.library.ui.KmRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="50dp">

    <com.kodmap.app.library.ui.KmImageView
        android:id="@+id/iv_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/gradient_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_selected_thumb" />

</com.kodmap.app.library.ui.KmRelativeLayout>


